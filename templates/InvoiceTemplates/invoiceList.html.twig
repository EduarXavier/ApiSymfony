{% extends 'base.html.twig' %}

{% block title %}Lista de pedidos{% endblock %}

{% block body %}
    {% include '/layouts/navbar.html.twig' %}
    {% set invoiceForPage = 8 %}
    {% set currentPage = app.request.query.get('page', 1) %}
    {% set totallInvoices = invoices|length %}
    {% set totalPages = (totallInvoices / invoiceForPage)|round(0, 'ceil') %}
    {% set startIndex = (currentPage - 1) * invoiceForPage %}
    {% set endIndex = (startIndex + invoiceForPage - 1) %}
    {% set invoices = invoices|slice(startIndex, invoiceForPage) %}

    <div class="container mt-5">
        <h2 class="text-center mb-4">Mis facturas</h2>
        <div class="d-flex justify-content-center w-100">
            <div class="col-md-6">
                <h4 class="text-center">Seleccionar Opci√≥n</h4>
                <div class="d-flex justify-content-center mb-4">
                    <div class="btn-group" role="group">
                        <a href="{{ path('invoices_list_status', {'status': 'invoice'}) }}" class="btn btn-primary">Facturas</a>
                        <a href="{{ path('invoices_list_status', {'status': 'pay'}) }}" class="btn btn-success">Pago</a>
                        <a href="{{ path('invoices_list_status', {'status': 'cancel'}) }}" class="btn btn-danger">Cancelado</a>
                        <a href="{{ path('invoices_list') }}" class="btn btn-secondary">Todo</a>
                    </div>
                </div>
            </div>
        </div>
        {% if invoices is empty%}
            <div class="alert alert-info" role="alert">
                No hay pedidos disponibles en este momento.
            </div>
        {% else %}
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
                {% for invoice in invoices %}
                    <a href="{{ path('invoices_details', {'id': invoice.id}) }}" class="text-decoration-none">
                        <div class="col text-dark">
                            <div class="card shadow-lg rounded">
                                {% if invoice.status == "shopping-cart" %}
                                    <div class="card-header bg-secondary text-white">
                                        {{ invoice.user.name }}
                                    </div>
                                {% elseif invoice.status == "invoice" %}
                                    <div class="card-header bg-primary text-white">
                                        {{ invoice.user.name }}
                                    </div>
                                {% elseif invoice.status == "pay" %}
                                    <div class="card-header bg-success text-white">
                                        {{ invoice.user.name }}
                                    </div>
                                {% else %}
                                    <div class="card-header bg-danger text-white">
                                        {{ invoice.user.name }}
                                    </div>
                                {% endif %}
                                <div class="card-body">
                                    <p>
                                        <strong>Estado:</strong> {{ invoice.status }}
                                    </p>
                                    <p>
                                        <strong>Productos:</strong> {{ invoice.products|length }}
                                    </p>
                                    <p>
                                        <strong>Fecha:</strong> {{ invoice.date|date('Y/m/d h:i:s', 'America/Bogota') }}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>
            <div class="d-flex justify-content-center p-absolute mt-5" style="bottom: 0">
                {% for page in 1..totalPages %}
                    <a
                            style="text-decoration: none; border-radius: 5px"
                            {% if not status is defined %}
                                href="{{ path(route, {'page': page }) }}"
                            {% else %}
                                href="{{ path(route, {'page': page, 'status' : status}) }}"
                            {% endif %}
                            class="{{ page == currentPage ? 'btn-primary' : 'btn-outline-primary' }} btn p-1 m-1"
                    >
                        {{ page }}
                    </a>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}