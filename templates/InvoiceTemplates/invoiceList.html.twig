{% extends 'base.html.twig' %}

{% block title %}Lista de productos{% endblock %}

{% block body %}

    <div class="container mt-5">
        {% if invoices is empty %}
            <div class="alert alert-info" role="alert">
                No hay pedidos disponibles en este momento.
            </div>
        {% else %}
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
                {% for invoice in invoices %}
                    <a href="/invoice/details/{{ invoice.id }}" class="text-decoration-none">
                        <div class="col text-dark">
                            <div class="card shadow-lg rounded">
                                <div class="card-header bg-secondary text-white">
                                    {{ invoice.userDocument }}
                                </div>
                                <div class="card-body">
                                    <p>
                                        <strong>ID:</strong> {{ invoice.id }}
                                    </p>
                                    <p>
                                        <strong>Estado:</strong> {{ invoice.status }}
                                    </p>
                                    <p>
                                        <strong>Productos:</strong> {{ invoice.products|length }}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        {% endif %}
    </div>

{% endblock %}