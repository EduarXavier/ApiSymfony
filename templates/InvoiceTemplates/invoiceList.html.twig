{% extends 'base.html.twig' %}

{% block title %}Lista de pedidos{% endblock %}

{% block body %}

    {% include '/layouts/navbar.html.twig' %}

    <div class="container mt-5">

        {% if invoices is empty %}
            <div class="alert alert-info" role="alert">
                No hay pedidos disponibles en este momento.
            </div>
        {% else %}

            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">

                {% for invoice in invoices %}

                    <a href="/invoices/details/{{ invoice.id }}" class="text-decoration-none">
                        <div class="col text-dark">
                            <div class="card shadow-lg rounded">

                                {% if invoice.status == "shopping-cart" %}
                                    <div class="card-header bg-secondary text-white">
                                        {{ invoice.userDocument }}
                                    </div>
                                {% elseif invoice.status == "invoice" %}
                                    <div class="card-header bg-primary text-white">
                                        {{ invoice.userDocument }}
                                    </div>
                                {% elseif invoice.status == "pay" %}
                                    <div class="card-header bg-success text-white">
                                        {{ invoice.userDocument }}
                                    </div>
                                {% else %}
                                    <div class="card-header bg-danger text-white">
                                        {{ invoice.userDocument }}
                                    </div>
                                {% endif %}

                                <div class="card-body">
                                    <p>
                                        <strong>ID:</strong> {{ invoice.id }}
                                    </p>
                                    <p>
                                        <strong>Estado:</strong> {{ invoice.status }}
                                    </p>
                                    <p>
                                        <strong>Productos:</strong> {{ invoice.products|length }}
                                    </p>
                                    <p>
                                        <strong>Fecha:</strong> {{ invoice.date }}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        {% endif %}
    </div>

{% endblock %}