{% extends 'base.html.twig' %}

{% block title %}Lista de productos{% endblock %}

{% block body %}
    {% include '/layouts/navbar.html.twig' %}
    {% set productsForPage = 12 %}
    {% set currentPage = app.request.query.get('page', 1) %}
    {% set totalPages = (allProducts|length / productsForPage)|round(0, 'ceil') %}
    {% set startIndex = (currentPage - 1) * productsForPage %}
    {% set endIndex = (startIndex + productsForPage - 1) %}
    {% set products = allProducts|slice(startIndex, productsForPage) %}
    
    <div class="container mt-5">
        {% if products is empty %}
            <div class="alert alert-info" role="alert">
                No se encontraron productos.
            </div>
        {% else %}
            <h3 style="text-align: center" class="mb-3">Productos: {{ allProducts|length }}</h3>
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
                {% for product in products %}
                    <a href="{{ path('product_details', {'code': product.code}) }}" class="text-decoration-none">
                        <div class="col text-dark">
                            <div class="card shadow-lg rounded">
                                <div class="card-header bg-info text-white">
                                    {{ product.name }}
                                </div>
                                <div class="card-body">
                                    <p>
                                        <strong>Precio:</strong> {{ product.price }}
                                    </p>
                                    <p>
                                        <strong>Cantidad:</strong> {{ product.amount }}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>
            <div class="d-flex justify-content-center p-absolute mt-5" style="bottom: 0">
                {% for page in 1..totalPages %}
                    <a
                            style="text-decoration: none; border-radius: 5px"
                            href="{{ path('product_list_view', {'page': page }) }}"
                            class="{{ page == currentPage ? 'btn-primary' : 'btn-outline-primary' }} btn p-1 m-1"
                    >
                        {{ page }}
                    </a>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}